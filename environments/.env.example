# Little Bit Environment Configuration Example
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the values for your environment

# Environment
APP_ENV=development

# AWS Configuration
APP_AWS_REGION=us-west-2

# Cognito Configuration
APP_COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX
APP_COGNITO_CLIENT_ID=1234567890abcdefghijklmnop
APP_COGNITO_IDENTITY_POOL_ID=us-west-2:12345678-1234-1234-1234-123456789012
APP_COGNITO_REGION=us-west-2

# S3 Configuration
APP_S3_BUCKET_NAME=littlebit-audio-bucket-dev
APP_S3_REGION=us-west-2

# AppSync Configuration
APP_APPSYNC_ENDPOINT=https://abcdefghijklmnopqrstuvwxyz.appsync-api.us-west-2.amazonaws.com/graphql
APP_APPSYNC_REGION=us-west-2
APP_APPSYNC_AUTH_TYPE=AMAZON_COGNITO_USER_POOLS
APP_APPSYNC_API_KEY=da2-abcdefghijklmnopqrstuvwxyz

# SQS Configuration (optional)
APP_SQS_QUEUE_URL=https://sqs.us-west-2.amazonaws.com/123456789012/littlebit-processing-queue-dev

# API Configuration
APP_API_BASE_URL=http://localhost:3000
APP_API_TIMEOUT=60000

# Feature Flags
APP_FEATURE_AUDIO_PROCESSING=true
APP_FEATURE_SOCIAL_SHARING=true
APP_FEATURE_ANALYTICS=false